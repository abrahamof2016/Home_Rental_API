extends layout

block content

	h1 #{title}

	form(method='POST')
		div.form-grout
			label(for='name') Type
			input#name.form.control(type='text', placeholder='Apartment, etc.' 
			name='name' required value=(undefined===type ? '' : type.name) )
		button.btn.btn-primary(type='submit') Submit
	
	if errors
		ul
			for error in errors
				li!= error.msg
